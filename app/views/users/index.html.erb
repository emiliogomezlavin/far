<p id="notice"><%= notice %></p>

<h1>List of Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Current City</th>
      <th>Origin City</th>
      <th>Native Language</th>
      <th>Languages</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %> <%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.current_city %></td>
        <td><%= user.origin_city %></td>
        <td><%= user.native_language %></td>
        <td><%= user.languages %></td>
        <td><%= user.age %></td>
        <td><%= button_to 'View', user, class: 'button' %></td>
        <td><%= button_to 'Edit', edit_user_path(user), class: 'button' %></td>
        <td><%= button_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Create New User', new_user_path, class: 'button' %>
